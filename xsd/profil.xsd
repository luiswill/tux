            <xsd:element name="mot" type="tux:Mot" minOccurs="0" maxOccurs="1"/>
        </xsd:sequence>
    </xsd:complexType>

    <xsd:simpleType name="DoubleTemps">
        <xsd:restriction base="xsd:double">
